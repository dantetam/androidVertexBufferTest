        <Button
            android:id="@+id/info_menu"
            android:text="@string/info_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="90%"
            app:layout_marginLeftPercent="60%"
            android:visibility="invisible"
            android:contentDescription="@string/info_menu"
            android:onClick="onClickInfoMenu" />
        <ImageView
            android:id="@+id/splash_screen_main"
            android:background="@drawable/splash_screen"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="100%"
            app:layout_marginTopPercent="0%"
            app:layout_marginLeftPercent="0%"
